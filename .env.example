# ==========================================
# AI VTuber Configuration for Hiyori_A Model
# ==========================================

# === Discord Bot ===
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_PRIORITY=0

# === OpenAI / LLM ===
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4o-mini
RESPONSE_TIMEOUT=10

# === VTube Studio ===
VTS_PLUGIN_NAME=AI VTuber Demo
VTS_HOST=127.0.0.1
VTS_PORT=8001

# VTS Connection Settings
VTS_PING_INTERVAL=30
VTS_PING_TIMEOUT=20
VTS_RECONNECT_ATTEMPTS=10
VTS_RECONNECT_BACKOFF_MS=1000

# === Hiyori_A Motion Settings ===
# ⚠️ Hiyori_A ใช้ built-in parameters ของ VTS (ไม่ต้องสร้างเอง)
# ปรับค่าให้อ่อนนุ่มขึ้นเพื่อให้ดูเป็นธรรมชาติ
VTS_MOTION_INTENSITY=0.6
VTS_BLINK_FREQUENCY=0.4
VTS_HEAD_MOVEMENT_RANGE=12
VTS_EYE_MOVEMENT_RANGE=0.6
VTS_BODY_SWAY_RANGE=3

# Motion Timing (วินาที)
VTS_MOTION_MIN_INTERVAL=2.0
VTS_MOTION_MAX_INTERVAL=5.0
VTS_BLINK_DURATION=0.15

# === Emotion Hotkeys ===
# ⚠️ ตรงกับที่ตั้งใน VTS (ต้องตรงทุกตัวอักษร!)
ENABLE_GLOBAL_HOTKEYS=false
VTS_HK_THINKING=thinking
VTS_HK_HAPPY=happy
VTS_HK_SAD=sad

# Hotkey Behavior
VTS_EMOTION_TRIGGER_PROBABILITY=0.6
VTS_EMOTION_AUTO_ANALYZE=true

# Safe Motion Mode
# ⚠️ แนะนำปิดเพื่อใช้ built-in parameters แทน (เสถียรกว่า)
SAFE_MOTION_MODE=false
SAFE_HOTKEY_INTERVAL=8.0

# === YouTube Live (Optional) ===
YOUTUBE_STREAM_ID=your_youtube_stream_id_here
YOUTUBE_PRIORITY=1

# === TTS Settings ===
TTS_ENGINE=f5_tts_thai
TTS_VOICE_ID=default
TTS_EMOTION_DEFAULT=neutral
TTS_REFERENCE_WAV=path/to/your/reference_audio.wav
TTS_REFERENCE_TEXT=สวัสดีค่ะ ยินดีที่ได้รู้จักนะคะ

# F5-TTS-THAI Settings
F5_TTS_MODEL=v1
F5_TTS_STEP=32
F5_TTS_CFG=2.0
F5_TTS_SPEED=0.9
F5_TTS_SR=24000
F5_TTS_REF_TEXT=
F5_TTS_TIMEOUT_MS=3000

# Hugging Face Token (Optional - for F5-TTS models)
HF_TOKEN=your_huggingface_token_here

# === RVC Voice Conversion ===
ENABLE_RVC=true
VOICE_PRESET=anime_girl
RVC_TIMEOUT_MS=2000

# === Whisper.cpp STT ===
DISCORD_VOICE_STT_ENABLED=true
WHISPER_CPP_BIN_PATH=path/to/whisper.cpp/main.exe
WHISPER_CPP_MODEL_PATH=path/to/whisper.cpp/models/ggml-small.bin
WHISPER_CPP_LANG=th
WHISPER_CPP_THREADS=4
WHISPER_CPP_NGL=35
WHISPER_CPP_TIMEOUT_MS=5000