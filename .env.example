# === AI VTuber Demo ENV Example ===
# Copy to .env and fill values

DISCORD_BOT_TOKEN=your_discord_bot_token_here
OPENAI_API_KEY=your_openai_api_key_here
YOUTUBE_STREAM_ID=your_youtube_stream_id_here

# VTube Studio
VTS_PLUGIN_NAME=AI VTuber Demo
VTS_PLUGIN_TOKEN=your_vts_plugin_token_here
VTS_HOST=localhost
VTS_PORT=8001

# LLM & runtime
LLM_MODEL=gpt-4o-mini
RESPONSE_TIMEOUT=10
DISCORD_PRIORITY=0
YOUTUBE_PRIORITY=1

# TTS defaults
TTS_ENGINE=f5_tts_thai
TTS_VOICE_ID=default
TTS_EMOTION_DEFAULT=neutral
TTS_REFERENCE_WAV=

# F5-TTS-THAI params
F5_TTS_MODEL=v1
F5_TTS_STEP=32
F5_TTS_CFG=2.0
F5_TTS_SPEED=1.0
F5_TTS_SR=24000
F5_TTS_REF_TEXT=
HF_TOKEN=your_huggingface_token_here

# Voice conversion (RVC scaffold)
ENABLE_RVC=true
VOICE_PRESET=anime_girl

# Whisper.cpp STT
WHISPER_CPP_BIN_PATH=path/to/whisper.cpp/main.exe
WHISPER_CPP_MODEL_PATH=path/to/whisper/model.bin
WHISPER_CPP_LANG=th
WHISPER_CPP_THREADS=4
WHISPER_CPP_NGL=35
WHISPER_CPP_TIMEOUT_MS=5000
DISCORD_VOICE_STT_ENABLED=true